@page
@model BloomInventories.Pages.DashboardModel
@{
}

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BloomInventories</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BloomInventories.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Antic+Didone&family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400&display=swap" rel="stylesheet">
</head>
<body>

    <div class="navigation">
        <div class="logo">BLOOM INVENTORIES</div>
        <div class="line"></div>
        <h3 class="activeH">Dashboard</h3>
        <h3>Inventory</h3>
        <h3>Create</h3>
        <h3>Sales Portal</h3>
    </div>

    <div style="width: 55%; height: 100vh; float: left; background-color: #FDFCF7;">

        <div class="row">
            <select class="location-picker">
                <option>Bloom Headquarters</option>
                <option>Peony Place</option>
                <option>Carnation Corner</option>
            </select>

            <h3 class="sub-nav">Home</h3>
            <h3 class="sub-nav">Inventory</h3>
            <h3 class="sub-nav">Create</h3>

        </div>

        <h1>The most fresh floral <stong>creations</stong> happen here...</h1>
       
        <div class="seasonal">
    </div>
       
  
</body>
</html>
